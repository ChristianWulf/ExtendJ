LambdaExpr : Expr ::= LambdaParameters LambdaBody;

abstract LambdaParameters;

//Parameter used for inferred parameters
InferredParameterDeclaration ::= <ID:String>;

EmptyLambdaParameters : LambdaParameters;
InferredLambdaParameters : LambdaParameters ::= Parameters:InferredParameterDeclaration*;
DeclaredLambdaParameters : LambdaParameters ::= Parameters:ParameterDeclaration*;

abstract LambdaBody;
BlockLambdaBody : LambdaBody ::= Block;
ExprLambdaBody : LambdaBody ::= Expr; 